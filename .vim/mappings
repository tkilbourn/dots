let mapleader = ","

nnoremap <F2> :tabp <CR>
nnoremap <F3> :tabn <CR>
nnoremap <C-t> :tabnew <CR>
inoremap {} {<CR>}<Esc>O
nnoremap <C-L> /^.\{101}/e<CR>
nnoremap Y y$

nnoremap <leader>t :TagbarToggle<CR>
nnoremap <leader>h <C-W>h
nnoremap <leader>l <C-W>l

nnoremap <leader>em :vsplit $HOME/.vim/mappings<cr>
nnoremap <leader>sm :source $HOME/.vim/mappings<cr>

nnoremap <leader>ec :vsplit $HOME/.vim/colors<cr>
nnoremap <leader>sc :source $HOME/.vim/colors<cr>

iabbrev teh the

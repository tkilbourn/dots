syntax on
set nocompatible
set ruler

set hidden
set backspace=indent,eol,start

set autoindent
set nocindent
set nosmartindent

set smarttab
set tabstop=8
set shiftwidth=2
set shiftround
set softtabstop=2
set expandtab
set textwidth=80

let is_bash=1
let java_allow_cpp_keywords=1

filetype plugin indent on

set complete-=i
set nrformats-=octal
set autoread

set number
set numberwidth=5
set laststatus=2
set statusline=%F%m%r%h%w\ %=%-20.(l\ %-5l%=c\ %-4c%=lines\ %-4L%)\ %=%-40(hex\ 0x%B%)\ %P
set showmode
set showcmd
set cursorline

set pastetoggle=<F5>
set showtabline=2
set display+=lastline
set diffopt=filler,horizontal
set wildmenu
set wildmode=list:longest,full
set scrolloff=2

set ttimeoutlen=-1
set timeoutlen=250
